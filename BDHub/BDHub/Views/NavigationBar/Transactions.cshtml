@model IEnumerable<BDHub.Models.Payment>
@{
    ViewBag.Title = "Transactions";
}

<h2>My transactions</h2>

<div class="row">
    <div class="col-md-3">
        <p><b>DATE</b></p>
    </div>

    <div class="col-md-3">
        <p><b>PAYER</b></p>
    </div>

    <div class="col-md-3">
        <p><b>RECEIVER</b></p>
    </div>

    <div class="col-md-3">
        <p><b>PAYMENT</b></p>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-3">
            @item.paymentDatetime
       </div>

        <div class="col-md-3">
            @item.payerUsername
        </div>

        <div class="col-md-3">
            @item.receiverUsername
        </div>

        <div class="col-md-3">
            @item.paymentSum <b>BD</b>
        </div>
    </div>
}